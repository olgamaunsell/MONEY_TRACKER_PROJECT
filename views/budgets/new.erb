<h2>New Budget</h2>
<form class="" action="/budgets" method="POST">

  <div class="form-drop-down">
       <label for="month-select">Month:</label>
       <select name="month_no" id="month-select">
         <% @months.each do |month_no, month_name| %>
             <option value=<%= month_no %>><%= month_name %></option>
         <% end %>
       </select>
  </div>

  <div class="form-drop-down">
    <label for="month-select">Year:</label>
    <select name="year" id="year-select">
      <option value="2017">2017</option>
      <option value="2018">2018</option>
    </select>
  </div>

  <div class="form-drop-down">
       <label for="tag-select">Tag:</label>
       <select name="tag_id" id="tag-select">
         <% @tags.each do |tag| %>
             <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
         <% end %>
       </select>
  </div>

  <label for="name-input">Name:</label>
  <input id="name-input" type="text" name="name" value="">

  <label for="monthly_limit-input">Monthly Limit:</label>
  <input id=" monthly_limit-input" type="number" step="0.01" placeholder="0.00" name="monthly_limit" value="">

  <br/>
  <input class="btn--new" type="submit" name="" value="Save Budget">
</form>
