<h2>New Budget</h2>
<form class="" action="/budgets" method="POST">

  <div class="form-drop-down">
       <label for="month-select">Month:</label>
       <select name="month_no" id="month-select">
         <% @months.each do |month| %>
             <option value=<%= month %>><%= month %></option>
         <% end %>
       </select>
  </div>

  <label for="month-input">Year:</label>
  <input id="month-input" type="text" name="name" value="">

  <label for="name-input">Name:</label>
  <input id="name-input" type="text" name="name" value="">

  <div class="form-drop-down">
       <label for="tag-select">Category:</label>
       <select name="tag_id" id="tag-select">
         <% @tags.each do |tag| %>
             <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
         <% end %>
       </select>
  </div>

  <label for="monthly_limit-input">Monthly Limit:</label>
  <input id=" monthly_limit-input" type="number" step="0.01" placeholder="0.00" name="amount" value="">

  <br/>
  <input class="side-button" type="submit" name="" value="Save Budget">
</form>
