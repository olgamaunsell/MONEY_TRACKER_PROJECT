<h2>Transactions</h2>

<table>
  <caption>Transactions</caption>
  <thead>
    <tr>
      <th scope="col">Vendor</th>
      <th scope="col">Tag</th>
      <th scope="col">Date</th>
      <th scope="col">Amount £</th>
      <th scope="col">Comment</th>
      <th scope="col">Transaction Details</th>
    </tr>
  </thead>
<tbody>
  <% @transactions.each do |transaction|  %>
  <tr>
    <td><%= transaction.vendor.name %></td>
    <td><%= transaction.tag.name %></td>
    <td><%= transaction.transaction_date %></td>
    <td><%= transaction.amount %></td>
    <td><%= transaction.comment %></td>

    <td><a href="/transactions/<%= transaction.id %>">Transaction details</a></td>
  </tr>
  <% end %>
  <td></td>
</tbody>
<tfoot>
  <tr>
    <th scope="row" colspan="5">Total Transactions</th>
    <td colspan="1">£ <%= @total_amount %></td>
  </tr>
</tfoot>
</table>
<% if @over_budget > 0 %>
  <p>Hey Olga you've exceeded your budget this month by £ <%=@over_budget %> !</p>
<% end %>
