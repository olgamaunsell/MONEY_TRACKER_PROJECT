<h2>Edit Transaction</h2>
<form class="" action="/transactions/<%= @transaction.id %>" method="POST">

  <div class="form-drop-down">
    <label for="vendor-select">Vendor:</label>
       <select name="vendor_id" id="vendor-select"> selected="<%= @transaction.vendor_id  %>">
         <% @vendors.each do |vendor| %>
           <% if vendor.id == @transaction.vendor_id %>
             <option value=<%= vendor.id %> selected><%= vendor.name.capitalize %></option>
           <% else %>
             <option value=<%= vendor.id %>><%= vendor.name.capitalize %></option>
           <% end %>
         <% end %>
       </select>
  </div>

  <div class="form-drop-down">
    <label for="tag-select">Tag:</label>
       <select name="tag_id" id="tag-select"> selected="<%= @transaction.tag_id  %>">
         <% @tags.each do |tag| %>
           <% if tag.id == @transaction.tag_id %>
             <option value=<%= tag.id %> selected><%= tag.name.capitalize %></option>
           <% else %>
             <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
           <% end %>
         <% end %>
       </select>
  </div>

  <label for="amount-update">Amount:</label>
  <input id="amount-update" type="number" step="0.01" placeholder="0.00" name="amount" value="<%= @transaction.amount %>">

  <label for="date-update">Date:</label>
  <input id="date-update" type="date" name="transaction_date" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="<%= @transaction.transaction_date %>">

  <label for="comment-input">Comment:</label>
  <input id="comment-input" type="text" name="comment" value="<%= @transaction.comment %>">

  <br>
  <input class="side-button" type="submit" name="" value="Update Transaction">
</form>
