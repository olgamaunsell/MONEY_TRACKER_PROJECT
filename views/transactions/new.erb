<h2>New Transaction</h2>
<form class="" action="/transactions" method="POST">

  <div class="form-drop-down">
       <label for="vendor-select">Vendor:</label>
       <select name="vendor_id" id="vendor-select">
         <% @vendors.each do |vendor| %>
             <option value=<%= vendor.id %>><%= vendor.name.capitalize %></option>
         <% end %>
       </select>
  </div>

  <div class="form-drop-down">
       <label for="tag-select">Category:</label>
       <select name="tag_id" id="tag-select">
         <% @tags.each do |tag| %>
             <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
         <% end %>
       </select>
  </div>

  <label for="amount-input">Amount:</label>
  <input id="amount-input" type="number" step="0.01" placeholder="0.00" name="amount" value="">

  <label for="date-input">Date:</label>
  <input id="date-input" type="date" name="transaction_date" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"  value="">

  <label for="comment-input">Comment:</label>
  <input id="comment-input" type="text" name="comment" value="">


  <input class="side-button" type="submit" name="" value="Save Transaction">
</form>
